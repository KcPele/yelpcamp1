
<%- include('../partials/header')%>

<header class="backImage jumbotron">
<div class="container">
     <h1>Welcome To YelpCamp!</h1>
     <p>View our hand picked campgrounds from all over the world</p>
     <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a>
     </p>
     </div>
</header>
<div class="container">
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
<% campgrounds.forEach((campground) => { %>
  <div class="col-md-3 col-sm-6">
     <div class="thumbnail">
         <img style="min-height: 150px; width: 300px;" src="data:<%=campground.contentType%>;base64,<%=campground.image%>">
      
      <div class="caption">
       <h4><%= campground.name %></h4>
      </div>
       <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">Read More</a>
     </div>
     </div>
<% })%>
   
    </div>
</div>

<%- include('../partials/footer')%>
